<div class="headline">
  <h1>Dashboard</h1>
</div>
<!-- will give a reminder to checkup on currentley applied jobs -->
  
  <% if @followup_jobs.any?%>
    
    <div class="inline">
      <div class="headline"><strong>Følg op på jobs</strong></div>
      <%@followup_jobs.each do |fd| %>
        <div class="contact-box">
          <div class="contact-headline">
            <%= fd.company_name%>
          </div>
          <br>
          <%= "Stilling: #{fd.job_title}" %>
          <br>
          <%= "Firma email: #{fd.company_email}"%>
          <br>
          <%= "Firma telefon: #{fd.company_phone}"%>
        </div>
      <%end%>
    </div>  
  <%end%>

<!-- will display key numbers for the current application process -->


<div class="inline">
  <div class="headline"><strong>Nøgletal</strong></div>
  <div class="highlight-numbers">
    <p>Ansøgte jobs denne måned</p>
    <br>
    <%=@applications_this_month %>
  </div>

  <div class="highlight-numbers">
    <p>Ansøgte jobs i denne uge</p>
    <br>
    <%= @applications_this_week %>
  </div>
  
  <div class="highlight-numbers">
    <p>Jobsamtale invitationer denne måned</p>
    <br>
    <%= @interview_invites_this_month %>
  </div>

  <div class="highlight-numbers">
    <p>Jobsamtale invitationer i alt</p>
    <br>
    <%= @interview_invites_total %>
  </div>

  <div class="highlight-numbers">
    <p>Antal personlige ansøgninger</p>
    <br>
    <%= @applications_in_person %>
  </div>

  <div class="highlight-numbers">
    <p>Antal telefoniske ansøgninger</p>
    <br>
    <%= @applications_by_phone %>
  </div>

  <div class="highlight-numbers">
    <p>Antal skiftlige ansøgninger</p>
    <br>
    <%= @applications_written %>
  </div>

  <div class="highlight-numbers">
    <p>Succes rate i %</p>
    <br>
    <%= "#{@succes_rate} %" %>
  </div>
</div>


<!--will display a list of contacts if current user has any contacts should allways be at the bootom of the page-->
<% if @contacts.any? %>
  <div class="inline">
    <div class="headline"><strong>Kontaktpersoner</strong></div>
    <% @contacts.each  do |contact| %>
      <div class="contact-box">
        <div class="contact-headline">
          <%= "#{contact.position} - #{contact.name}" %>
        </div>
        <br>
        <% if contact.email.present? %>
          <%= "E-mail: #{contact.email}"  %>
          <br>
        <%end%>
        <% if contact.phone.present? %>
          <%= "Tlf: #{contact.phone}"%>
          <br>
        <%end%>

        <br>
        <%= link_to 'Slet kontakt', contact, method: :delete, data: { confirm: 'Er du sikker på at du vil slette denne kontakt?' }, class: 'btn btn-delete'%>
      </div>
    <%end%>
  </div>
<%end%>