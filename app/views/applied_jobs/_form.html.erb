
<%= simple_form_for(@applied_job) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :job_id %>
    <%= f.input :job_title %>
    <%= f.input :company_name %>
    <%= f.input :application %>
    <%= f.input :application_type_id %>
    <%= f.input :application_status_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
